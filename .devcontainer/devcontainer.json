{
  "name": "vybn-cyclotron",
  "image": "ghcr.io/devcontainers/templates/debian:3.0.2",
  "features": {
    "ghcr.io/devcontainers/features/python:1": { "version": "3.12" },
    "ghcr.io/devcontainers/features/node:1":   { "version": "20"   }
  },
  "mounts": [
    "source=vybn-cache,target=/home/vscode/.cache,type=volume"
  ],
  "postCreateCommand": "bash .devcontainer/init_env.sh",
  "forwardPorts": [8000],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens"
      ]
    }
  }
}
